{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"no-plusplus": "off",
		"no-nested-ternary": "warn",
		"no-param-reassign": "warn",
		"no-continue": "off"
	}
}
